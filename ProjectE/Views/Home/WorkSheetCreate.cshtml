@model IEnumerable<ProjectE.Models.ViewModels.DeviceListElement>

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<style>

    .filter-table .quick {
        margin-left: 0.5em;
        font-size: 0.8em;
        text-decoration: none;
    }



    .fitler-table .quick:hover {
        text-decoration: underline;
    }



    td.alt {
        background-color: #ffc;
        background-color: rgba(255, 255, 0, 0.2);
    }
</style>

<table id="DeviceList" class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Installation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimarySupply)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Installation)-@Html.DisplayFor(modelItem => item.ShortcutName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceModel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimarySupply)
                </td>
                <td>@Html.ActionLink("Dodaj", "AddDevice", new { id = item.DeviceId })</td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="@Url.Content("~/Scripts/filtertable/jquery.filtertable.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('#DeviceList').filterTable({
        minRows: 0
        });

        });
    </script>
}